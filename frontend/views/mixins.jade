//column mixin
mixin column(i)
  if searchResult == bookshopIds[i] || bookshops[i].tags.includes(searchResult)
  div(class="col-sm bookshop-container text-center", id="#{bookshopIds[i]}")
    div(class='bookshop-name') #{bookshops[i].name}
    a(class='website-link', href="#{bookshops[i].website}") Visit Website
    p(class='bookshop-address')
      each item in bookshops[i].address
        | #{item}
        br
    div(class='opening-hours') Opening hours
    div(class='times')
      each item in bookshops[i].openingHours
        | #{item}
        br
    div(class='tags') 
      each tag in bookshops[i].tags
        | ##{tag} 
        block