include mixins
extends ./layout
block content 
  nav.navbar.navbar-expand-lg.bg-light
    .container-fluid
      a.navbar-brand(href='#') OB
      button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse
        ul.navbar-nav
          li.nav-item
            a.nav-link.active(aria-current='page', href='#') Home
          li.nav-item
            a.nav-link(href='#') Sign In
          li.nav-item
            a.nav-link(href='#') Donations
  h1 OpenBook
  a(class="search-link", href="/openbook/search") Search
  div(class="container")
  - for (let i = 0; i < bookshops.length; i++) {
    - if (((i == 0) || ((i +1) % 5 == 0)) && (i + 4 < bookshops.length)) {
        div(class="row")
          +column(i)
          +column(i + 1)
          +column(i + 2)
          +column(i + 3)
          +column(i + 4)
    - } else if ((i == 0) || ((i + 1) % 5 == 0)) {
      -let counter = bookshops.length - i
      div(class="row")
        - for (let c = 0; c < counter; c ++) {
          +column(i+c)
        -}
     -} 
  - }
    
    div(id="map", style="width: 100%; height: 500px; border-radius: 5px")
      script(src='js/map.js')
