extends ./layout
block content 
  nav.navbar.navbar-expand-lg.bg-light
    .container-fluid
      a.navbar-brand(href='#') OB
      button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav', aria-controls='navbarNav', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
      #navbarNav.collapse.navbar-collapse
        ul.navbar-nav
          li.nav-item
            a.nav-link.active(aria-current='page', href='#') Home
          li.nav-item
            a.nav-link(href='#') Sign In
          li.nav-item
            a.nav-link(href='#') Donations
  h1 OpenBook
  div(class="container")
    div(class="row")
     - for (let i = 0; i < bookshops.length; i++) {
        div(class="col-sm bookshop-container text-center", id="#{bookshopIds[i]}")
          div(class='bookshop-name') #{bookshops[i].name}
          a(class='website-link', href="#{bookshops[i].website}") Visit Website
          p(class='bookshop-address')
            each item in bookshops[i].address
              | #{item}
              br
          div(class='opening-hours') Opening hours
          div(class='times')
            each item in bookshops[i].openingHours
              | #{item}
              br
          div(class='tags') 
            each tag in bookshops[i].tags
              | ##{tag} 
     - }
     
    div(id="map", style="width: 100%; height: 500px; border-radius: 5px")
      script(src='js/map.js')